{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Python Debugger: Flask",
          "type": "python",
          "request": "launch",
          "module": "flask",
          "env": {
              "FLASK_APP": "run.py",
              "FLASK_ENV": "development" // Adicione isso para ativar o modo de depuração
          },
          "args": [
              "run",
              "--no-debugger", // Você pode remover isso se quiser usar o depurador integrado
              "--no-reload" // Mantenha isso se você não quiser que o Flask recarregue automaticamente
          ],
          "jinja": true,
          "autoStartBrowser": false
      }
  ]
}
