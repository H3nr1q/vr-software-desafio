{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flask Debugger",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "run.py",         // Nome do arquivo principal do app
        "FLASK_ENV": "development"     // Define o ambiente de desenvolvimento para ativar o modo debug
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload"
      ],
      "jinja": true,                   // Habilita a depuração de templates Jinja
      "justMyCode": true,
      "console": "integratedTerminal"
    }
  ]
}
